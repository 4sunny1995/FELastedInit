<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminCreateUser">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="160dp"
            android:background="@drawable/botron_whilehide"
            android:layout_marginRight="25dp"

            android:orientation="vertical">

            <TextView
                android:id="@+id/lblRegister"
                style="@style/TextTitle"
                android:text="Đăng ký tài khoản" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblNameRegister"
                    style="@style/textLabel"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="Họ và tên :"

                    android:textColor="#000000" />

                <EditText

                    android:id="@+id/txtAdminNameRegister"
                    style="@style/TextInput"
                    android:ems="10"
                    android:background="@drawable/botron_edittext"
                    android:inputType="text" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Họ"
                    style="@style/textLabel"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="end"
                    android:text="Email :" />

                <EditText
                    android:id="@+id/txtAdminEmailRegister"
                    style="@style/TextInput"
                    android:ems="10"
                    android:background="@drawable/botron_edittext"
                    android:inputType="textEmailAddress" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblPassword"
                    style="@style/textLabel"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:textColor="#000000"
                    android:text="Mật khẩu :" />

                <EditText
                    android:id="@+id/txtAdminPasswordRegister"
                    style="@style/TextInput"
                    android:background="@drawable/botron_edittext"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblRePass"
                    style="@style/textLabel"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:gravity="end"
                    android:text="Nhập lại mật khẩu :" />

                <EditText
                    android:id="@+id/txtAdminRePassRegister"
                    style="@style/TextInput"
                    android:background="@drawable/botron_edittext"
                    android:ems="10"
                    android:inputType="textPassword" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnAdminRegisterRegister"
                    style="@style/btnPrimary"
                    android:background="@drawable/botron_button"
                    android:text="Đăng ký" />

                <Button
                    android:id="@+id/btnAdminCancel"
                    style="@style/btnDanger"
                    android:layout_weight="1"
                    android:background="@drawable/botron_buttoncancel"
                    android:text="Hủy bỏ" />
            </LinearLayout>

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>