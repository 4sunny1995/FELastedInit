<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"

    android:background="#FBFDFF"
    tools:context=".MangeUserActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingLeft="20dp">

        <ImageView
            android:id="@+id/imagLogo"
            style="@style/logosmall">
        </ImageView>
        <TextView
            android:id="@+id/lbProfile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="Thống kê tài khoản"
            android:textColor="#0377D1"
            android:textSize="30dp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18dp"
                android:textColor="#000000"
                android:text="Số lượng người dùng: " />
            <TextView
                android:id="@+id/tvSLUser"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:textColor="#FF0000"
                android:textStyle="bold|italic"
                android:layout_height="wrap_content"
                android:text=" 0" />
            <TextView
                android:id="@+id/tv15"
                android:layout_width="wrap_content"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_height="wrap_content"
                android:text=" tài khoản người dùng" />
        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/btnThemUserAdmin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@color/colorPrimary"
        android:padding="5dp"
        android:text="Thêm người dùng"
        android:textColor="@color/colorWhite"
        android:textSize="12dp" />
    <TextView
        android:id="@+id/tvDetails"
        android:textSize="20dp"
        android:textColor="#FBFBFB"
        android:layout_marginTop="20dp"
        android:textStyle="italic"
        android:gravity="center"
        android:background="#008EFF"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Danh sách tài khoản" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"

        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvID"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="STT"
            android:textAlignment="center"
            android:textColor="#5C00FF"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tvEmailAccount"
            android:layout_width="250dp"
            android:paddingLeft="100dp"
            android:layout_margin="5dp"
            android:textSize="20dp"
            android:textColor="#5C00FF"
            android:layout_height="wrap_content"
            android:text="Email" />
<!--        <TextView-->
<!--            android:id="@+id/tvRole"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_margin="5dp"-->
<!--            android:textSize="20dp"-->
<!--            android:textColor="#5C00FF"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:text="Admin" />-->


    </LinearLayout>
    <ListView
        android:id="@+id/listAccount"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:dividerHeight="5dp"

        android:layout_height="wrap_content" >


    </ListView>


</LinearLayout>